# Flask Configuration
FLASK_ENV=development
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-IN-PRODUCTION
DEBUG=False

# API Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Database Configuration
# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=criminal_appeal
DB_USER=postgres
DB_PASSWORD=your-database-password-here

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_CONNECT_TIMEOUT=10

# Database SSL/TLS Configuration (for production)
# Set to 'require', 'verify-ca', or 'verify-full' in production
DB_SSL_MODE=prefer

# Legacy database URL (for backward compatibility)
DATABASE_URL=postgresql://postgres:your-database-password-here@localhost:5432/criminal_appeal

# Security Configuration
# Comma-separated list of allowed hosts (use specific domains in production)
ALLOWED_HOSTS=localhost,127.0.0.1

# JWT Configuration (for authentication)
JWT_SECRET_KEY=CHANGE-THIS-TO-A-DIFFERENT-RANDOM-SECRET-KEY
JWT_ACCESS_TOKEN_EXPIRES=3600

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log